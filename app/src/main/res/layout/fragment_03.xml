<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000000">

    <TextView
        android:id="@+id/calculator_display"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="end"
        android:text="@string/calculator_zero"
        android:textColor="#FFFFFF"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="20sp"
        android:autoSizeMaxTextSize="100sp"
        android:autoSizeStepGranularity="2sp"
        app:layout_constraintBottom_toTopOf="@id/calculator_grid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/calculator_grid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.65"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        >

        <Button
            android:id="@+id/calculator_button_ac"
            android:layout_height="0dp"
            android:layout_width="0dp"
            app:layout_constraintHeight_percent="0.19"
            app:layout_constraintWidth_percent="0.23"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <Button
            android:id="@+id/calculator_button_unary"
            android:layout_height="0dp"
            android:layout_width="0dp"
            app:layout_constraintHeight_percent="0.19"
            app:layout_constraintWidth_percent="0.23"
            app:layout_constraintStart_toEndOf="@id/calculator_button_ac"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"
            />


        <Button
            android:id="@+id/calculator_button_percent"
            android:layout_height="0dp"
            android:layout_width="0dp"
            app:layout_constraintHeight_percent="0.19"
            app:layout_constraintWidth_percent="0.23"
            app:layout_constraintStart_toEndOf="@id/calculator_button_unary"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"
            />

        <Button
            android:id="@+id/calculator_button_div"
            android:layout_height="0dp"
            android:layout_width="0dp"
            app:layout_constraintHeight_percent="0.19"
            app:layout_constraintWidth_percent="0.23"
            app:layout_constraintStart_toEndOf="@id/calculator_button_percent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"
            />

        <Button
            android:id="@+id/calculator_button_7"
            android:layout_height="0dp"
            android:layout_width="0dp"
            app:layout_constraintHeight_percent="0.19"
            app:layout_constraintWidth_percent="0.23"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/calculator_button_ac"
            android:layout_marginTop="4dp"
            />

        <Button
            android:id="@+id/calculator_button_8"
            android:layout_height="0dp"
            android:layout_width="0dp"
            app:layout_constraintHeight_percent="0.19"
            app:layout_constraintWidth_percent="0.23"
            app:layout_constraintStart_toEndOf="@id/calculator_button_7"
            app:layout_constraintTop_toBottomOf="@id/calculator_button_unary"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            />

        <Button
            android:id="@+id/calculator_button_9"
            android:layout_height="0dp"
            android:layout_width="0dp"
            app:layout_constraintHeight_percent="0.19"
            app:layout_constraintWidth_percent="0.23"
            app:layout_constraintStart_toEndOf="@id/calculator_button_8"
            app:layout_constraintTop_toBottomOf="@id/calculator_button_percent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            />

        <Button
            android:id="@+id/calculator_button_mul"
            android:layout_height="0dp"
            android:layout_width="0dp"
            app:layout_constraintHeight_percent="0.19"
            app:layout_constraintWidth_percent="0.23"
            app:layout_constraintStart_toEndOf="@id/calculator_button_9"
            app:layout_constraintTop_toBottomOf="@id/calculator_button_div"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            />

        <Button
            android:id="@+id/calculator_button_4"
            android:layout_height="0dp"
            android:layout_width="0dp"
            app:layout_constraintHeight_percent="0.19"
            app:layout_constraintWidth_percent="0.23"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/calculator_button_7"
            android:layout_marginTop="4dp"
            />

        <Button
            android:id="@+id/calculator_button_5"
            android:layout_height="0dp"
            android:layout_width="0dp"
            app:layout_constraintHeight_percent="0.19"
            app:layout_constraintWidth_percent="0.23"
            app:layout_constraintStart_toEndOf="@id/calculator_button_4"
            app:layout_constraintTop_toBottomOf="@id/calculator_button_8"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            />

        <Button
            android:id="@+id/calculator_button_6"
            android:layout_height="0dp"
            android:layout_width="0dp"
            app:layout_constraintHeight_percent="0.19"
            app:layout_constraintWidth_percent="0.23"
            app:layout_constraintStart_toEndOf="@id/calculator_button_5"
            app:layout_constraintTop_toBottomOf="@id/calculator_button_9"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            />

        <Button
            android:id="@+id/calculator_button_sub"
            android:layout_height="0dp"
            android:layout_width="0dp"
            app:layout_constraintHeight_percent="0.19"
            app:layout_constraintWidth_percent="0.23"
            app:layout_constraintStart_toEndOf="@id/calculator_button_6"
            app:layout_constraintTop_toBottomOf="@id/calculator_button_mul"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            />

        <Button
            android:id="@+id/calculator_button_1"
            android:layout_height="0dp"
            android:layout_width="0dp"
            app:layout_constraintHeight_percent="0.19"
            app:layout_constraintWidth_percent="0.23"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/calculator_button_4"
            android:layout_marginTop="4dp"
            />

        <Button
            android:id="@+id/calculator_button_2"
            android:layout_height="0dp"
            android:layout_width="0dp"
            app:layout_constraintHeight_percent="0.19"
            app:layout_constraintWidth_percent="0.23"
            app:layout_constraintStart_toEndOf="@id/calculator_button_1"
            app:layout_constraintTop_toBottomOf="@id/calculator_button_5"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            />

        <Button
            android:id="@+id/calculator_button_3"
            android:layout_height="0dp"
            android:layout_width="0dp"
            app:layout_constraintHeight_percent="0.19"
            app:layout_constraintWidth_percent="0.23"
            app:layout_constraintStart_toEndOf="@id/calculator_button_2"
            app:layout_constraintTop_toBottomOf="@id/calculator_button_6"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            />

        <Button
            android:id="@+id/calculator_button_add"
            android:layout_height="0dp"
            android:layout_width="0dp"
            app:layout_constraintHeight_percent="0.19"
            app:layout_constraintWidth_percent="0.23"
            app:layout_constraintStart_toEndOf="@id/calculator_button_3"
            app:layout_constraintTop_toBottomOf="@id/calculator_button_sub"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            />

        <Button
            android:id="@+id/calculator_button_0"
            android:layout_height="0dp"
            android:layout_width="0dp"
            app:layout_constraintHeight_percent="0.19"
            app:layout_constraintWidth_percent="0.48"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/calculator_button_1"
            android:layout_marginTop="4dp"
            />

        <Button
            android:id="@+id/calculator_button_dot"
            android:layout_height="0dp"
            android:layout_width="0dp"
            app:layout_constraintHeight_percent="0.19"
            app:layout_constraintWidth_percent="0.23"
            app:layout_constraintStart_toEndOf="@id/calculator_button_0"
            app:layout_constraintTop_toBottomOf="@id/calculator_button_3"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            />

        <Button
            android:id="@+id/calculator_button_cal"
            android:layout_height="0dp"
            android:layout_width="0dp"
            app:layout_constraintHeight_percent="0.19"
            app:layout_constraintWidth_percent="0.23"
            app:layout_constraintStart_toEndOf="@id/calculator_button_dot"
            app:layout_constraintTop_toBottomOf="@id/calculator_button_add"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>